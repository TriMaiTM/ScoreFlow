{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["ES2021", "DOM"],
    "target": "ES2021",
    "module": "commonjs"
  },
  "include": ["src/**/*", "App.tsx", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
